{
  "ecmaFeatures": {
   "blockBindings": true,
   "forOf": true
  },
  "globals": {
    "document": true,
    "console": true,
    "setInterval": true,
    "require": true,
    "localStorage": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-console": 0,
    "strict": 0
  }
}
